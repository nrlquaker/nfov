{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "allowJs": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "gen",
        "rootDir": "src",
        "removeComments": false,
        "importHelpers": true,
        "noEmitHelpers": true,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "pretty": true
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "exclude": [
        ".vscode",
        "assets",
        "gen",
        "node_modules",
        "out",
        "screenshots"
    ]
}
